    <Button
        android:id="@+id/button_lightOn"
        android:text="On"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:onClick="onClickButtonLightOn" />

    <Button
        android:id="@+id/button_lightOff"
        android:text="Off"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:onClick="onClickButtonLightOff" />

    <TextView
        android:id="@+id/textview_alarmTime"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_above="@+id/toggle_alarm"
        android:layout_centerHorizontal="true"
        android:text="" />

    <Button
        android:id="@+id/button_tvAlarmTime"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_above="@+id/toggle_alarm"
        android:layout_centerHorizontal="true"
        android:onClick="onClickTextViewAlarmTime" />

    <ToggleButton
        android:id="@+id/toggle_alarm"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_width="fill_parent"
        android:textOn="Alarm Set"
        android:textOff="Alarm Off"
        android:onClick="onToggleAlarm" />
